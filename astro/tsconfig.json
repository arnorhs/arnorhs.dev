{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "paths": {
      "$src": ["src/*"],
      "$lib": ["src/lib/index.ts"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"]
    }
  }
}
