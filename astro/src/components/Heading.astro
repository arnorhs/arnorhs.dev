---
// surely there must be a better way
export interface Props {
  tag: 'h1'|'h2'|'h3'|'h4'|'h5'|'h6'
  variation: 'normal'|'big'|'semi'|'dense'
}

const { tag = 'h3', variation = 'normal' } = Astro.props as Props

const variations: Record<Props['variation'],string> = {
  'big': `
    my-6
    text-5xl
    font-display
  `,
  'semi': `
    my-0
    text-xl
    font-serif
    font-bold
  `,
  'normal': `
    mb-4
    mt-6
    text-3xl
    font-nav
  `,
  'dense': `
    my-0
    text-xl
    font-nav
  `
}

const classes = variations[variation]

---
{tag === 'h1' && (
  <h1 class={classes}><slot /></h1>
)}
{tag === 'h2' && (
  <h2 class={classes}><slot /></h2>
)}
{tag === 'h3' && (
  <h3 class={classes}><slot /></h3>
)}
{tag === 'h4' && (
  <h4 class={classes}><slot /></h4>
)}
{tag === 'h5' && (
  <h5 class={classes}><slot /></h5>
)}
{tag === 'h6' && (
  <h6 class={classes}><slot /></h6>
)}